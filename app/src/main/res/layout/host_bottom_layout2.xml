<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/host_bottom_layout_more"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="visible">

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/change_voice"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/changevol" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/flash_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/icon_flash" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/change_role"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/changerole"
        android:visibility="gone" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_filter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/icon_filter" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/back_primary"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/back" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />
</LinearLayout>
