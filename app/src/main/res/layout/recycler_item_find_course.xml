<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/layout_pic"
            android:layout_width="wrap_content"
            android:layout_height="90dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_picture"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                fresco:actualImageScaleType="fitCenter"
                fresco:placeholderImage="@drawable/bg_live_default_picture"
                fresco:placeholderImageScaleType="fitXY"
                fresco:roundAsCircle="false"
                fresco:roundedCornerRadius="3dp" />

            <TextView
                android:background="@drawable/tv_shape_corner_transparent"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/tv_price"
                android:textSize="10sp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorTextWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_lock_bg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                fresco:placeholderImage="@color/transparent2"
                fresco:roundAsCircle="true" />

            <ImageView
                android:background="@mipmap/icon_locked_white"
                android:layout_centerInParent="true"
                android:id="@+id/iv_lock"
                android:layout_width="18dp"
                android:layout_height="18dp" />
        </RelativeLayout>

        <!--<com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_picture"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            fresco:actualImageScaleType="fitCenter"
            fresco:placeholderImage="@drawable/bg_live_default_picture"
            fresco:placeholderImageScaleType="fitXY"
            fresco:roundAsCircle="false"
            fresco:roundedCornerRadius="3dp" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/layout_pic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_courseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:lines="2"
                android:maxLines="2"
                android:text="和大家聊聊《三国演义》和"
                android:textColor="#4A4A4A"
                android:textSize="14sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_teachers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_course_persion"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:maxLines="1"
                android:text="何老师"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_resNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@mipmap/ic_course_keshi"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="1"
                    android:text="0课时"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/tv_learnNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@mipmap/ic_course_computer"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="1"
                    android:text="0人学习"
                    android:textSize="12sp" />
            </LinearLayout>

