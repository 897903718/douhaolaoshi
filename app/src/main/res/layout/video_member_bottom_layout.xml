<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/icon_message"
        android:visibility="gone" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/icon_switch_camera" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/vmember_mic_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/icon_mic_open" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/icon_beauty_drawable" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/icon_exit_live" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/icon_like" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/menumore" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/icon_fullscreen" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />
</LinearLayout>
