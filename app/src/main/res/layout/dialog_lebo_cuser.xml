<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <View
        android:id="@+id/hpplay_cusre_view_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/hpplay_cusre_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/hpplay_cusre_dialog_bg"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_title_height_46dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/downing_happly_tv"
            android:textColor="@android:color/black"
            android:textSize="@dimen/activity_title_size_16sp" />

        <RelativeLayout
            android:id="@+id/hpplay_cusre_cal"
            android:layout_width="@dimen/layout_title_height_36dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="@dimen/activity_vertical_margin_20dp"
                android:layout_height="@dimen/activity_vertical_margin_20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/hpplay_window_close_button" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_horizontal_margin_0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#cdced2" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin_20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_title_height_965dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/activity_vertical_margin_20dp"
                android:src="@drawable/hplpya_cusre_right" />

        </LinearLayout>

    </ScrollView>
    </LinearLayout>

</RelativeLayout>