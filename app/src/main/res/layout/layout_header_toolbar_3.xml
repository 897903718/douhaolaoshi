<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="?attr/colorPrimary"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/header_ll_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:minWidth="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/header_img_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_header_back"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_ll_right"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:minWidth="45dp"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_header_search"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="转发"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:visibility="visible" />

        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_notification"
                android:visibility="gone" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="right"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_notificationdot"
                android:visibility="gone" />
        </FrameLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_header_delete"
            android:visibility="gone" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_header_full_screen"
            android:visibility="gone" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_header_share"
            android:visibility="gone" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_header_setting"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="@dimen/text_size_title_sub"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/header_ll_right"
        android:layout_toRightOf="@+id/header_ll_left"
        android:gravity="center">

        <TextView
            android:id="@+id/header_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>
