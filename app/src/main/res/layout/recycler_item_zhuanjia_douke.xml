<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/iv_picture"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:singleLine="true"
            android:textColor="@color/text_color_standard"
            android:textSize="16sp"
            tools:text="孩子的未来，如何引导？知名教育专家为您详细解答！最后还有大家期待的问答孩子的未来，如何引导？知名教育专家为您详细解答！最后还有大家期待的问答" />

        <TextView
            android:id="@+id/tv_authorDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_below="@+id/tv_title"
            android:layout_centerVertical="true"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:textColor="#929292"
            android:textSize="14sp"
            tools:text="北大教师，十年教育经验，有很丰富北大教师，十年教育经验，有很丰富" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_picture"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_below="@+id/ll_authorInfo"
            android:layout_marginRight="10dp"
            fresco:placeholderImage="@mipmap/ic_douke"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:viewAspectRatio="1.57" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_picture"
            android:layout_alignTop="@+id/iv_picture"
            android:layout_margin="6dp"
            android:background="@drawable/shape_bg_text_zhuanjia_recommend"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text="原创"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#EFEFEF" />
</LinearLayout>